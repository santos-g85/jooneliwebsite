@model webjooneli.Models.Entities.JobOpeningModel

@{
    ViewBag.Title = "Delete Job Opening";
    Layout = "_AdminLayout";
}

<h2>Are you sure you want to delete this job opening?</h2>

<div>
    <h3>@Model.Title</h3>
    <p>Company: @Model.Company</p>
    <p>Location: @Model.Location</p>
    <p>Employment Type: @Model.EmploymentType</p>
    <p>Salary Range: @Model.SalaryRange</p>
</div>

<form asp-controller="JobOpening" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "JobOpening")" class="btn btn-secondary">Cancel</a>
</form>
