@model webjooneli.Models.Entities.NewsModel
@{
    ViewBag.Title = "Delete News";
    Layout = "_AdminLayout";
}

<h2>Delete News</h2>

<h4>Are you sure you want to delete this news item?</h4>

<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Category:</strong> @Model.Category <br />
    <strong>Created At:</strong> @Model.CreatedAt.ToString("g") <br />
</div>

@using (Html.BeginForm("DeleteConfirmed", "News", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "News")" class="btn btn-secondary">Cancel</a>
}
