 @model webjooneli.Models.Entities.NewsModel

<div class="card-body mt-5" style="width: 85%; margin: 0 auto;">
    <div class="row align-items-start">
        @if (!string.IsNullOrEmpty(Model.ImageId))
        {
            <div class="col-md-5 mb-4 mb-md-0">
                <img src="/@Model.ImageId" alt="@Model.Title" class="img-fluid rounded w-100" style="max-height: 400px; object-fit: cover;">
            </div>
        }

        <div class="col-md-7">
            <div class="news-content mb-4">
                @Html.Raw(Model.Content)
            </div>

            <div class="d-flex justify-content-between align-items-center">
                @if (Model.IsFeatured)
                {
                    <span class="badge bg-secondary-subtle text-dark">
                        <i class="fas fa-star me-1"></i> Featured Story
                    </span>
                }
                <a href="@Url.Action("Index", "News")" class="btn btn-outline-danger">
                    <i class="fas fa-arrow-left me-1"></i> Back to News
                </a>
            </div>
        </div>
    </div>
</div>
