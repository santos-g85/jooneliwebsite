 @model webjooneli.Models.Entities.NewsModel

<div class="container my-5">
    <div class="card border-0">
        <div class="row g-0">
            @if (!string.IsNullOrEmpty(Model.ImageId))
            {
                <div class="col-md-5">
                    <img src="/@Model.ImageId"
                         alt="@Model.Title"
                         class="img-fluid rounded-start w-100 "
                         style="max-height: 400px; object-fit: cover;">
                </div>
            }

            <div class="col-md-7">
                <div class="card-body d-flex flex-column h-100">
                    <h3 class="card-title fw-bold mb-3">
                        @Model.Title
                    </h3>

                    <div class="card-text mb-4">
                        @Html.Raw(Model.Content)
                    </div>

                    <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-star me-1"></i> Featured Story
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(Model.Source))
                        {
                            <a href="@Model.SourceUrl" class="small text-muted text-decoration-none">
                                <i class="bi bi-link-45deg"></i> @Model.Source
                            </a>
                        }
                        <a href="@Url.Action("Index", "News")" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i> Back to News
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
