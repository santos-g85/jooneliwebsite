@model List<webjooneli.Models.Entities.NewsModel>
@{
    ViewBag.Title = "News List";
    Layout = "_AdminLayout";
}

<h2>News List</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "News")">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Featured</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.IsFeatured</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", "News", new { id = item.Id })">Details</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "News", new { id = item.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "News", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
