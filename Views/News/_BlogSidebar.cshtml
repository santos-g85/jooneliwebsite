@model List<webjooneli.Models.Entities.NewsModel>

<!-- blogs -->
<div class="card bg-secondary-subtle mb-4 border-0 shadow-sm">
    <div class="card-body ">
        <h3 class="h5 card-title mb-3">Blogs</h3>
        <div class="list-group list-group-flush">
            @{
                var newsitems = Model.Where(n => n.Category.ToString() == "Blog").Take(3).ToList();
            }
            @foreach (var item in newsitems)
            {
                <a href="@Url.Action("NewsDetail", "News", new { id = item.Id })" class="list-group-item list-group-item-action py-3 px-0 d-flex align-items-center border-0 rounded-3 hover-shadow mb-3">
                    <div class="flex-shrink-0 ratio ratio-1x1 bg-light" style="width: 60px;">
                        @if (!string.IsNullOrEmpty(item.ImageId))
                        {
                            <img src="/@item.ImageId" class="object-fit-cover rounded" alt="@item.Title">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center text-muted bg-secondary rounded-2">
                                <i class="bi bi-newspaper text-white"></i>
                            </div>
                        }
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="h6 mb-1 text-dark fw-semibold">@item.Title</h4>
                        <small class="text-muted">@item.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </a>
            }
        </div>
    </div>
</div>