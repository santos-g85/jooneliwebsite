@model webjooneli.Models.Entities.NewsModel
@{
    ViewBag.Title = "Edit News";
    Layout = "_AdminLayout";
}

<h2>Edit News</h2>

<form asp-controller="News" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Title -->
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Content -->
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <!-- Category -->
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Existing Image ID (Hidden or Optional) -->
    @* <input asp-for="ImageId " /> *@

    <!-- Image Upload -->
    <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="newImageFile" class="form-control" />
    </div>

    <!-- Is Featured (Radio Buttons) -->
    <div class="mb-3">
        <label class="form-label">Is Featured?</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFeatured" value="true" />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFeatured" value="false" />
            <label class="form-check-label">No</label>
        </div>
        <span asp-validation-for="IsFeatured" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-danger">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>
