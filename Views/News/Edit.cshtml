@model webjooneli.Models.Entities.NewsModel
@{
    ViewBag.Title = "Edit News";
    Layout = "_AdminLayout";
}

<h2>Edit News</h2>

<form asp-controller="News" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Title -->
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Content -->
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <!-- Category -->
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Source" class="form-label fw-bold"></label>
        <input asp-for="Source" class="form-control form-control-lg" placeholder="Enter news Source" />
        <span asp-validation-for="Source" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SourceUrl" class="form-label fw-bold"></label>
        <input asp-for="SourceUrl" class="form-control form-control-lg" placeholder="Enter news SourceUrl" />
        <span asp-validation-for="SourceUrl" class="text-danger small"></span>
    </div>
    <!-- Existing Image ID (Hidden or Optional) -->
    @* <input asp-for="ImageId " /> *@

    <!-- Image Upload -->
    <div class="mb-3">
        <label class="form-label">Upload New Image (optional)</label>
        <input type="file" name="newImageFile" class="form-control" />
    </div>

    <!-- Is Featured (Radio Buttons) -->
    <div class="mb-3">
        <label class="form-label">Is Featured?</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFeatured" value="true" />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="IsFeatured" value="false" />
            <label class="form-check-label">No</label>
        </div>
        <span asp-validation-for="IsFeatured" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-danger">Save Changes</button>
    <a asp-action="AdminIndex" class="btn btn-secondary">Back to list</a>
</form>


@section Scripts {
    <!-- jQuery (required) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Bootstrap 5 (required by Summernote) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Summernote CSS and JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs5.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs5.min.js"></script>

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#Content').summernote({
                height: 300,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ],
                placeholder: 'Write your news content here...'
            });
        });
    </script>
}
