<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Jooneli Inc</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/topnav.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/css/video.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/touch-button.css" asp-append-version="true" />


    <link rel="icon" type="image/x-icon" href="~/images/joonlogo--JfLTwqW.png" />

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Jooneli Inc" />
    <meta name="robots" content="index, follow" />
    <meta name="title" content="Jooneli Inc" />
    <meta name="description" content="360cbs trading system." />

    <!-- Open Graph Meta -->
    <meta property="og:title" content="Jooneli Inc" />
    <meta property="og:description" content="Jooneli Inc" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://jooneli.com/" />
    <meta property="og:image" content="http://jooneli.com/" />
    <meta property="og:image:alt" content="Jooneli Inc" />

    <!-- Twitter Meta -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jooneli Inc" />
    <meta name="twitter:description" content="Jooneli Inc" />
    <meta name="twitter:image" content="http://jooneli.com/images/" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-J3CMH0V42N"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-J3CMH0V42N');
    </script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>

    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <div class="video-header position-relative">

            <video autoplay muted loop playsinline class="bg-video">
                <source src="~/videos/hero-video-finalist.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        <section >
            <!-- Navbar Container with Animation Background -->
            <div class="navbar-container position-relative">
                <div class="navbar-bg-overlay"></div>

                <nav class="navbar navbar-expand-lg  position-relative">
                    @await Html.PartialAsync("_Navbar.cshtml")
                </nav>
            </div>
             @await Html.PartialAsync("Partials/_HomeHeroContent") 
        </section>
        </div>
    }
    else
    {
        <section>

            <!-- Navbar Container with Animation Background -->
            <div class="navbar-container position-relative">
                <div class="navbar-bg-overlay"></div>

                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm position-relative">
                    @await Html.PartialAsync("_navtwo.cshtml")
                </nav>
            </div>
        </section>
    }


    @await Html.PartialAsync("Partials/_MobileOffcanvas")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

     @* @await Html.PartialAsync("Partials/_CookiesConsent")  *@

     @await Html.PartialAsync("Partials/_Footer") 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/nav.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>