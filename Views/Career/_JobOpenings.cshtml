@using webjooneli.Models.Entities
@model List<JobOpeningModel>


<div class="d-flex flex-wrap justify-content-center gap-4">

        @foreach (var job in Model)
        {
            <div class="card shadow-sm rounded" style="width: 300px;">
                <div class="card-body">
                    <h5 class="card-title  mb-3">
                        <i class="bi bi-bank2 me-2"></i>  @job.Title
                    </h5>
                    <p class="text-muted mb-2" style="font-size: 0.9rem;">
                        Department: @job.Department
                    </p>
                    <div class="bg-light p-4 rounded text-center mb-3">
                        <img src="~/images/joonlogo--JfLTwqW.png" style="height:64px" width="64px" alt="Alternate Text" />
                    </div>
                    <p>
                        @job.Description
                    </p>

                <div class="d-flex justify-content-between">
                    <p>
                        <span class="btn  btn-sm btn-outline-dark">@job.Location</span>
                        <span class="btn  btn-sm btn-outline-dark">@job.EmploymentType</span>

                    </p>

                    <a asp-controller="Career" asp-action="Details" asp-route-id="@job.Id">
                        <span class="btn  btn-sm btn-outline-danger">Apply Now</span>
                    </a>

                </div>
                </div>
            </div>
        }
</div>
