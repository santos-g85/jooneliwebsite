@using webjooneli.Models.Entities
@model MessagesModel;

<div class="cpy-7 mt-md-5 mt-0">
    <div class="row  align-items-center gx-5">
        @* <h3 class="text-danger">Send Us a Message</h3> *@
        <h3 style="background: linear-gradient(to right, #f44336, #4caf50); -webkit-background-clip: text; color: transparent;">
            Send Us a Message
        </h3>
        <!-- Text Content -->
        <div class="col-md-6 order-2 order-md-1">
            <form asp-controller="Message" asp-action="Index" method="post" id="contactForm">

                @* Display validation errors *@
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Full Name -->
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" name="name" asp-for="Name" required>
                </div>

                <!-- Email Address -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" asp-for="Email" required>
                </div>

                <!-- Subject -->
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject" asp-for="Subject" required>
                </div>

                <!-- Message -->
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" asp-for="Message" required></textarea>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-danger px-5 py-3">Send Message</button>
            </form>

        </div>

